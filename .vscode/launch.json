{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "run compiler",
      "program": "${workspaceRoot}/adl/language/dist/compiler/program.js",
      "args": [],
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "cwd": "${workspaceRoot}/adl/language"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "run test",
      "program": "${workspaceRoot}/adl/core/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test",
        "--timeout=2000000"
      ],
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "cwd": "${workspaceRoot}/adl/plugins/azure"
    },
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "vscode-extension",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/adl/extension"
      ],
      "env": {
        "no-static-loader": "true"
      },
      "outFiles": [
        "${workspaceRoot}/adl/extension/dist/client/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "vscode-server",
      "port": 6009,
      "timeout": 100000,
      "restart": true,
      "outFiles": [
        "${workspaceRoot}/adl/extension/dist/server/**/*.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "VSCode Client+Server",
      "configurations": [
        "vscode-extension",
        "vscode-server"
      ]
    }
  ]
}